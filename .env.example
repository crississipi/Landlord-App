# Database
DATABASE_URL="postgresql://user:password@localhost:5432/landlord_db"

# NextAuth Configuration - REQUIRED for session persistence
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# For production (Vercel), set NEXTAUTH_URL to your deployed URL
# NEXTAUTH_URL="https://your-app.vercel.app"

# Tenant App URL - Where tenants will be redirected
TENANT_APP_URL="https://your-tenant-app.vercel.app"
NEXT_PUBLIC_TENANT_APP_URL="https://your-tenant-app.vercel.app"

# Email Configuration (for sending billing statements, credentials, etc.)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM_NAME="Rodriguez Properties"
EMAIL_FROM_ADDRESS="your-email@gmail.com"

# GitHub Configuration (for file uploads)
GITHUB_TOKEN="your-github-token"
GITHUB_USERNAME="your-github-username"
GITHUB_REPO="your-repo-name"
GITHUB_BRANCH="main"
